{
  "name": "@seedcompany/nestjs-email",
  "description": "NestJS library to generate emails via JSX and send them via AWS",
  "license": "MIT",
  "files": [
    "*.d.ts",
    "*.js",
    "*.js.map",
    "templates"
  ],
  "packageManager": "yarn@3.2.3",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p .",
    "lint": "eslint --ext .ts,.tsx --fix --max-warnings 0 .",
    "test": "jest",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "type-check": "tsc -p . --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-sesv2": "^3.154.0",
    "@nestjs/common": "^7.6.4 || ^8 || ^9",
    "emailjs": "^3.8.1",
    "html-to-text": "^8.2.1",
    "mjml": "^4.13.0",
    "mjml-react": "^2.0.8",
    "open": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "tempy": "^1.0.1"
  },
  "peerDependencies": {
    "@nestjs/common": "^7 || ^8 || ^9",
    "react": ">=17.0.0",
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@commitlint/prompt-cli": "^17.0.3",
    "@nestjs/common": "^9.0.11",
    "@nestjs/core": "^9.0.11",
    "@nestjs/platform-express": "^9.0.11",
    "@nestjs/testing": "^9.0.11",
    "@seedcompany/eslint-plugin": "^3.3.0",
    "@types/html-to-text": "^8.1.1",
    "@types/jest": "^28.1.8",
    "@types/mjml-react": "^2.0.5",
    "@types/node": "^18.7.13",
    "eslint": "^8.22.0",
    "husky": "^4.3.8",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.6",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.6",
    "semantic-release": "^19.0.5",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "setupFiles": [
      "reflect-metadata"
    ],
    "testEnvironment": "node"
  },
  "publishConfig": {
    "access": "public"
  }
}
