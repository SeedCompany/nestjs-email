{
  "name": "@seedcompany/nestjs-email",
  "description": "NestJS library to generate emails via JSX and send them via AWS",
  "license": "MIT",
  "files": [
    "*.d.ts",
    "*.js",
    "*.js.map",
    "templates"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p .",
    "lint": "eslint --ext .ts,.tsx --fix --max-warnings 0 .",
    "test": "jest",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "type-check": "tsc -p . --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-sesv2": "^3.24.0",
    "@nestjs/common": "^7.6.4 || ^8.0.0",
    "emailjs": "^3.5.0",
    "html-to-text": "^8.0.0",
    "mjml": "^4.10.2",
    "mjml-react": "^2.0.0",
    "open": "^8.2.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "reflect-metadata": "^0.1.13",
    "tempy": "^1.0.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.0.0 || ^8.0.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@commitlint/prompt-cli": "^13.1.0",
    "@nestjs/common": "^8.0.5",
    "@nestjs/core": "^8.0.5",
    "@nestjs/platform-express": "^8.0.5",
    "@nestjs/testing": "^8.0.5",
    "@seedcompany/eslint-plugin": "^1.6.0",
    "@types/html-to-text": "^8.0.1",
    "@types/jest": "^26.0.24",
    "@types/mjml-react": "^2.0.0",
    "@types/node": "^16.4.10",
    "@types/react-dom": "^17.0.9",
    "eslint": "^7.32.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.4",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.6"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "setupFiles": [
      "reflect-metadata"
    ],
    "testEnvironment": "node"
  },
  "publishConfig": {
    "access": "public"
  }
}
